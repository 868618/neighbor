/* components/Tabbar/Tabbar.wxss */
.tabbar{
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    height: 111rpx;
    z-index: 501;
    display: flex;
    align-items: flex-end;
    justify-content: space-around;
    box-sizing: border-box;
}

.bg{
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    height: 98rpx;
    /*border-top: 1rpx solid rgba(0,0,0, .25);*/
    background: #FAFAFA;
    z-index: 500;
    /*box-shadow: 0px 1px 0px 0px rgba(0,0,0,0.25);*/
}

.bg::before{
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1rpx;
    background: rgba(0, 0, 0, .1);
}

.tabbar .tabbar_item{
    /*width: 50%;*/
    /*width: 111rpx;*/
    width: calc( 50% - 55rpx );
    height: 98rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 20rpx;
}

.tabbar .tabbar_item .text{
    line-height: 28rpx;
    color: rgba(0, 0, 0, 0.45);
}

.tabbar .tabbar_item .active {
    color: #FE990C;
}

.tabbar .tabbar_item .text:nth-of-type(odd){
    margin-top: 10rpx;
}

.tabbar .tabbar_item:nth-of-type(1) image{
    width: 40rpx;
    height: 40rpx;
}


.tabbar .tabbar_item:nth-of-type(2) {
    width: 111rpx;
    background: #FE990C;
    height: 111rpx;
    border-radius: 50%;
    color: #FFFFFF;
}

.tabbar .tabbar_item:nth-of-type(2) image{
    width: 37rpx;
    height: 49rpx;
}

.tabbar .tabbar_item:nth-of-type(2) .text{
    color: rgba(255, 255, 255, .8);
}

.tabbar .tabbar_item:nth-of-type(3) image{
    width: 35.41rpx;
    height: 40rpx;
}