.mask{
    /*position: relative;*/
    height: 100vh;
    width: 100vw;
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
}

.mask .mask_bg{
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    /*display: none;*/
}

.mask .mask_box{
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    height: 88vh;
    background: #FFF;
    border-radius: 24rpx 24rpx 0px 0px;
    /*transition: all 0.2s;*/
    padding: 0 32rpx;
    box-sizing: border-box;
    transform: translateY(100%);
}

.mask .mask_box .mask_header{
    height: 120rpx;
    padding-top: 56rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.mask_nav{
    line-height: 1;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 32rpx;
    font-weight: 400;
    color: #575757;
}

.mask_nav .save{
    color: #E9792C;
}