/* components/Paybox/Paybox.wxss */

.bg {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.paybox {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  /*height: 418rpx;*/
  height: auto;
  z-index: 99;
  background: rgba(255, 255, 255, 1);
  border-radius: 18rpx 18rpx 0px 0px;
  box-sizing: border-box;
  padding: 38rpx 25rpx;
}

.paybox .paybox_head {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  color: rgba(0, 0, 0, 0.85);
  font-size: 28rpx;
}

.paybox .paybox_head .paybox_name {
  font-size: 32rpx;
}



.panel {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding-top: 58rpx;
}

.panel .panel_item{
  width: 217rpx;
  height: 68rpx;
  background: blue;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 1);
  border-radius: 4rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.16);
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.85);
  margin-bottom: 22rpx;
}

.panel .panel_item_active {
  color: #fe990c !important;
  border: 2rpx solid rgba(254, 153, 12, 1) !important;
}

.panel .panel_btn{
  width: 100%;
}
