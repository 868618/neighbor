/* components/Paybox/Paybox.wxss */

.bg {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.paybox {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 418rpx;
  z-index: 99;
  background: rgba(255, 255, 255, 1);
  border-radius: 18rpx 18rpx 0px 0px;
  box-sizing: border-box;
  padding: 38rpx 25rpx;
}

.paybox .paybox_head {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  color: rgba(0, 0, 0, 0.85);
  font-size: 28rpx;
}

.paybox .paybox_head .paybox_name {
  font-size: 32rpx;
}

.paybox  .paybox_container {
  margin-top: 58rpx;
}

.paybox  .paybox_container .paybox_grids {
  display: flex;
}

.paybox  .paybox_container .paybox_grids:last-of-type {
  margin-top: 22rpx;
}

.paybox  .paybox_container  .paybox_grids .grids_item {
  flex: 1;
  height: 68rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 1);
  border-radius: 4rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.16);
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.85);
}

.grids_item_active {
  color: #fe990c !important;
  border: 2rpx solid rgba(254, 153, 12, 1) !important;
}

.paybox  .paybox_container  .paybox_grids .grids_item:nth-of-type(2) {
  margin: 0 20rpx;
}

.paybox  .paybox_container  .paybox_btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 1);
  border-radius: 4rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.16);
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.85);
  height: 68rpx;
  margin-top: 20rpx;
}
