<view class="avatar-time avatar-class">
    <view class="avator">
        <image src="{{avatar}}" mode="widthFix" />
    </view>
    <text class="name">{{ nickName }}</text>
    <block wx:if="{{ timeMark }}">
        <text class="line" />
        <text class="time">{{ timeMark }}</text>
    </block>
</view>
