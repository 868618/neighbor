<Navbar type="location" />

<view class="order">

	<mp-tabs tabs="{{tabs}}" tab-class="header" active-class="active" swiper-class="swiper" activeTab="{{type - 1}}"  bind:change="tabChange">

		<block wx:for="{{tabs}}" wx:key="title">
			<scroll-view class="tab-content" scroll-y slot="tab-content-{{index}}" id="{{ index === 0 ? 'firstScroll' : null }}" style="{{ scrollViewStyle }}">
				<view class="list">
          			<mp-slideview ext-class="custom" buttons="{{slideButtons}}" bindbuttontap="slideButtonTap" wx:for="{{ currList }}" wx:if="{{ currList.length }}" wx:key="index">
						<view class="list_item"  bind:tap="toDetail" data-orderid="{{ item.orderId }}">

							<view class="list_item_top">
								<view class="name">{{ item.title }}</view>
								<view class="status">{{ item.answerStatusName || item.mark }}</view>
							</view>

							<view class="list_item_bottom">
								<view class="desc">{{ item.content }}</view>
								<view class="price" wx:if="{{ item.price }}">￥{{ item.price }}</view>
							</view>

						</view>
					</mp-slideview>

					<view class="empty" wx:if="{{ !currList.length }}">
						<image src="{{ src }}" mode="widthFix"  />
						<text> 还没有帮助哦</text>
					</view>

				</view>
			</scroll-view>
		</block>
	</mp-tabs>

</view>