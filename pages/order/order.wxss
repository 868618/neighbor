page {
  background-color: #F9F9F9;
  height: 100vh;
  overflow: hidden;
}

.order {}

.order .header{
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #FFFFFF;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.55);
}

.active{
  color: #E9792C !important;
  border-bottom-color: rgba(0, 0, 0, 0) !important;
}

.swiper{
  height: calc(100vh - 108rpx);
  
}

.order .list{
  padding-bottom: 20rpx;
}

.order .list .list_item {
  box-sizing: border-box;
  background-color: #FFF;
  height: 210rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  overflow: hidden;
  padding-top: 34rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.custom {
  /*height: 210rpx !important;*/
  /*margin-top: 20rpx;*/
  box-sizing: border-box;
}

.custom .weui-slideview__btn {
  background-color: #E75F5F;
  font-size: 32rpx;
  color: #FFFFFF;
  display: flex;
}
.order .list .list_item{
  height: 210rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
}


.order .list .list_item .list_item_top {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.order .list .list_item .list_item_top .name {
  font-size: 32rpx;
  color: #000;
  font-weight: bold;
}

.order .list .list_item .list_item_top .jiaji {
  position: relative;
}

.order .list .list_item .list_item_top .jiaji::after{
  content: '加急';
  width: 58rpx;
  height: 32rpx;
  border-radius: 16rpx 0px;
  line-height: 32rpx;
  background: #F77051;
  position: absolute;
  right: -72rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 20rpx;
  text-align: center;
  font-weight: bold;
  color: #FFF;
  z-index: 1;
}

.order .list .list_item .list_item_top .status {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.75);
}

.order .list .list_item .list_item_bottom {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}

.order .list .list_item .list_item_bottom .desc {
  max-width: 420rpx;
  color: rgba(0, 0, 0, 0.75);
  line-height: 40rpx;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.order .list .list_item .list_item_bottom .price {
  color: #FF5500;
  line-height: 40rpx;
  font-size: 30rpx;
}