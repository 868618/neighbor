.addHelpDescription{
    padding: 44rpx 32rpx;
    width: 100vw;
    height: 100vh;
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    z-index: 99;
    box-sizing: border-box;
    background: #FFFFFF;
}

.addHelpDescription .title {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;

    font-size: 44rpx;
    font-weight: 500;
    color: rgba(0, 0, 0, 0.75);
}

.addHelpDescription .title image{
    width: 38rpx;
    height: 32rpx;
}

.addHelpDescription .tip{
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(0, 0, 0, 0.55);
    line-height: 40rpx;
    margin-top: 16rpx;
}

.addHelpDescription .placeholder{
    position: relative;
}

.addHelpDescription .placeholder .tips{
    position: relative;
    font-size: 32rpx;
    font-weight: 400;
    color: rgba(0, 0, 0, 0.25);
    margin-top: 32rpx;
    left: 0;
    top: 0;
}

.addHelpDescription .placeholder .textarea{
    position: absolute;
    left: 0;
    top: 0;
    font-size: 32rpx;
    font-weight: 400;
    color: #252525;
    line-height: 44rpx;
}

.addHelpDescription .images{
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    /*justify-content: space-between;*/
    margin-top: 88rpx;
}

.addHelpDescription .images .item{
    width: 220rpx;
    height: 220rpx;
    overflow: hidden;
    margin-bottom: 13rpx;
}

.addHelpDescription .images .item:nth-of-type(3n-1) {
    margin-left: 13rpx;
    margin-right: 13rpx;
}

.addHelpDescription .images .item image{
    width: 100%;
}

.custom-class{
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
}