/* pages/addtask/addtask.wxss */
.addtask{
  background: #F9F9F9;
  padding-bottom: 280rpx;
  /* margin-top: 52rpx; */
}

.header {
  padding: 0 32rpx;
  padding-top: 52rpx;
  padding-bottom: 42rpx;
}

.header text {
  margin-right: 22rpx;
  margin-bottom: 20rpx;
}

.header text:last-of-type {
  margin-right: 0;
}

.header .tag {
  height: 60rpx;
  line-height: 60rpx;
  font-size:28rpx;
  font-weight:400;
  color:rgba(0,0,0,0.65);
  padding: 0 20rpx;
  background: #FFF;
  border-radius:30rpx;
  display: inline-block;
}

.header .active {
  height: 60rpx;
  line-height: 60rpx;
  font-size:28rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  padding: 0 20rpx;
  background: #FE990C;
  border-radius:30rpx;
  display: inline-block;
}


.main {
  box-sizing: border-box;
  padding: 0 32rpx;
  background: #FFF;
  padding-top: 34rpx;
  border-radius:16rpx 16rpx 0px 0px;
  padding-bottom: 50rpx;
}

.main .title {
  font-size:44rpx;
  font-weight:500;
  color:rgba(0,0,0,0.75);
}

.main .desc {
  margin-top: 16rpx;
  color:rgba(0,0,0,0.35);
}

.main .tip {
  margin-top: 60rpx;
  font-size:28rpx;
  font-weight:bold;
  color:rgba(0,0,0,0.65);
}

.main .helpdesc{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 60rpx;
  font-size:28rpx;
  font-weight:bold;
  color:rgba(0,0,0,0.65);
}

.main .helpdesc image{
  width: 37rpx;
  height: 32rpx;
}

.main .tip text {
  font-size:24rpx;
  font-weight: 300
}

.main .input_title{
  margin-top: 32rpx;
  border-bottom: 1rpx solid rgba(0,0,0,0.35);
}
.main .input_title input {
  /* height: 44rpx; */
  font-size: 44rpx;
  padding-bottom: 30rpx;
}

.main .input_title .placeholder {
  font-size: 44rpx;
  color:rgba(0,0,0,0.35);
}


.main .select {
  margin: 0 auto;
  box-sizing: border-box;
  padding: 0 140rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 48rpx;
  position: relative;
}

.main .select::after {
  content: '';
  position: absolute;
  left: 50%;
  top: 50%;
  width: 2rpx;
  height: 42rpx;
  background: rgba(0,0,0,0.25);
  transform: translate(-50%, -50%)
}

.main .select .select_item {
  text-align: center;
}

.main .select .select_item .select_name{
  font-size:32rpx;
  color:rgba(0,0,0,0.85);
  font-weight: bold;
}

.main .select .select_item .select_name text{
  margin-left: 12rpx;
}

.main .select .select_item .select_tip{
  font-weight:300;
  color:rgba(0,0,0,0.25);
  margin-top: 10rpx;
}

.footer {
  padding: 0 32rpx;
  margin-top: 30rpx;
}

.footer .footer_title{
  font-size:32rpx;
  font-weight:bold;
  color:rgba(0,0,0,0.75);
}


.footer .footer_list{
  margin-top: 26rpx;
}

.footer .footer_list view{
  position: relative;
  padding-left: 38rpx;
  color:rgba(0,0,0,0.65);
  font-size: 28rpx;
  margin-bottom: 14rpx;
}

.footer .footer_list view::before {
  content: '>';
  position: absolute;
  left: 0;
  top: 50%;
  color: #FFF;
  width:16rpx;
  height:16rpx;
  background:rgba(0,0,0,0.5);
  font-size: 12rpx;
  transform: translateY(-50%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.fixdbtn{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  padding: 0 30rpx 20rpx 30rpx; 
  background:#FFF;
}

.fixdbtn view{
  background: #FE990C;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size:32rpx;
  font-weight: 400;
  color:rgba(255,255,255,1);
  height: 100%;
}