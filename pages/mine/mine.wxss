page {
  background-color: #F5F5F5;
}

.mine {
  padding: 32rpx;
}

.mine .header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.mine .header .info {
  display: flex;
  align-items: center;
}

.mine .header .info .avator {
  width: 112rpx;
  height: 112rpx;
  overflow: hidden;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.mine .header .info .avator image {
  width: 112rpx;
  height: 112rpx;
}

.mine .header .info text {
  font-size: 32rpx;
  font-weight: 400;
  color: #252525;
  margin-left: 26rpx;
}

.mine .header .auth {
  width: 168rpx;
  height: 68rpx;
  background-color: #FFFFFF;
  border-radius: 68rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 26rpx;
  font-size: 28rpx;
  color: #252525;
}

.mine .header .auth image {
  width: 30rpx;
  height: 34rpx;
}


.mine .menu {
  margin-top: 62rpx;
  background-color: #FFFFFF;
  padding-bottom: 30rpx;
}

.mine .menu .tip {
  font-size: 32rpx;
  font-weight: 400;
  color: #252525;
  padding: 28rpx 0 0 26rpx;
}

.mine .menu .box{
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  margin-top: 30rpx;
}

.mine .menu .box .item{
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #575757;
  min-width: 72rpx;
  font-size: 24rpx;
  font-weight: 400;
}

.mine .menu .box .item image{
  width: 44rpx;
  height: 40rpx;
  margin-bottom: 24rpx;
}

.mine .watermark{
  text-align: center;
  margin-top: 150rpx;
}

.mine .watermark .title{
  color: #BBBBBB;
  font-size: 28rpx;
}

.mine .watermark .sub{
  color: #D4D4D4;
  font-size: 20rpx;
  margin-top: 6rpx;
}
