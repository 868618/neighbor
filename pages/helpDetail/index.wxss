}

.question{
    position: relative;
}
.question::before{
    content: '';
    width: 200vw;
    height: 1rpx;
    background: rgba(0, 0, 0, 0.1);
    position: absolute;
    left: -100rpx;
    right: 0;
    top: -1rpx;

}


.question .question_title{
    height: 102rpx;
    line-height: 102rpx;
    font-size: 36rpx;
    font-weight: 500;
    color: rgba(0, 0, 0, 0.95);
}

.question .question_content{
    font-size: 32rpx;
    font-weight: 300;
    color: rgba(0, 0, 0, 0.75);
    line-height: 44rpx;
    margin-top: 26rpx;
    padding-bottom: 28rpx;
    position: relative;
    /*border-bottom: 20rpx solid rgba(0, 0, 0, 0.1);*/
}

.question .question_content::after{
    content: '';
    width: 10000vw;
    height: 20rpx;
    background: rgba(0, 0, 0, 0.1);
    position: absolute;
    left: -200rpx;
    right: 0;
    bottom: -20rpx;
}


.answer{
    padding-top: 56rpx;
    border-bottom: 2rpx solid rgba(0, 0, 0, 0.1);
}

.answer .answer_placeholder{

}

