    padding: 0 18rpx 32rpx;
}

.answerList .image_tip {
    position: relative;
}

.answerList .image_tip::after {
    content: '';
    position: absolute;
    right: 28rpx;
    top: 50%;
    transform: translateY(-50%);
    width: 367rpx;
    height: 37rpx;
    background: url("https://linjubang.imrookie.cn/nb/image/2020/12/5/47e6e67c5db74e6e8b39a4a6f9db976a.png") no-repeat center;
    background-size: 367rpx;
}

.answerList .answer_header .answer_title{
    font-size: 36rpx;
    font-weight: 500;
    color: rgba(0, 0, 0, 0.85);
}

.answerList .answer_header .answer_desc{
    font-size: 24rpx;
    font-weight: 300;
    color: #888888;
}

.answerList .answer_item{
    margin-bottom: 18rpx;
    border-bottom: 18rpx solid rgba(0, 0, 0, 0.1);
    padding: 40rpx 32rpx 26rpx 32rpx;
}

.answerList .answer_item .answer_text{
    margin-top: 28rpx;
    font-size: 32rpx;
    font-weight: 400;
    color: rgba(0, 0, 0, 0.95);

    font-size: 32rpx;
    font-weight: 300;
    color: rgba(0, 0, 0, 0.75);
    line-height: 1;
}

.answerList .answer_item .answer_effect{
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 24rpx;
    font-weight: 300;
    color: rgba(0, 0, 0, 0.45);
    margin-top: 20rpx;
    line-height: 1;
}

.answer_effect .answer_time{

}

.answer_effect .answer_like{
    display: flex;
    align-items: center;
    justify-content: center;
}
.answer_effect .answer_like image{
    width: 22rpx;
    height: 22rpx;
    margin-left: 10rpx;
}

