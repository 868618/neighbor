}
.helpDetail{
    /*padding-top: 100rpx;*/
    /*padding-bottom: 210rpx;*/
    padding-top: 20rpx;
    min-height: 100vh;
}
.helpDetail .detail_info{
    border-top: 1rpx solid rgba(0, 0, 0, 0.1);
    padding: 28rpx 32rpx 36rpx 32rpx;
