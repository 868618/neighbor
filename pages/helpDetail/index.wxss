/* pages/helpDetail/index.wxss */
page{
    background: rgba(0, 0, 0, 0.1);
}
.helpDetail{
    /*padding-top: 100rpx;*/
    padding-bottom: 150rpx;
}
.helpDetail .detail_info{
    border-top: 1rpx solid rgba(0, 0, 0, 0.1);
    padding: 28rpx 32rpx 36rpx 32rpx;
    /*background: gray;*/
    border-bottom: 20rpx solid rgba(0, 0, 0, 0.1);
    background: #FFF;
}

.yiyingzhu, .daiyingzhu, .yibangzhu {
    position: relative;
}

.yiyingzhu::after, .daiyingzhu::after, .yibangzhu::after{
    content: '';
    width: 126rpx;
    height: 100rpx;
    position: absolute;
    right: 38rpx;
    top: 28rpx;
}
.yiyingzhu::after{
    background: url("http://oss.cogo.club/a10cc81a-0dc5-44bc-9b66-eae7e5fa7785.png") no-repeat center;
    background-size: 100%;
}

.daiyingzhu::after{
    background: url("http://oss.cogo.club/c09d752e-24a8-4c22-85a6-f9403bd75b38.png") no-repeat center;
    background-size: 100%;
}
.yibangzhu::after{
    background: url("http://oss.cogo.club/0c6f1a1f-92cb-49ed-b95b-0e23687b148c.png") no-repeat center;
    background-size: 100%;
}

.detail_info .detail_title{
    font-size: 36rpx;
    font-weight: 500;
    color: rgba(0, 0, 0, 0.95);
    line-height: 50rpx;
    margin-top: 38rpx;
}

.detail_info .detail_price{
    font-size: 30rpx;
    font-weight: 500;
    color: #FF5500;
    margin-top: 22rpx;
    line-height: 1;
}

.detail_info .detail_price text{
    margin-left: 12rpx;
}

.detail_info .detail_tag{
    display: flex;
    align-items: center;
    justify-content: flex-start;
    margin-top: 20rpx;
}
.detail_info .detail_tag text {
    padding: 1rpx 7rpx;
    background: #FFF6ED;
    font-size: 24rpx;
    font-weight: 400;
    color: #FE9500;
    border-radius: 16rpx;
    margin-right: 20rpx;
}

.detail_info .detail_text{
    margin-top: 28rpx;
    font-size: 32rpx;
    font-weight: 300;
    color: rgba(0, 0, 0, 0.75);
    line-height: 44rpx;
}

.detail_info .detail_images{
    display: flex;
    align-items: center;
    justify-content: space-around;
    padding-top: 20rpx;
}
.detail_info .detail_images .detail_images_item{
    width: 219rpx;
    height: 219rpx;
}

.detail_info .detail_images .detail_images_item image{
    width: 100%;
}


.detail_info .detail_time{
    font-size: 24rpx;
    font-weight: 400;
    color: #888888;
    line-height: 34rpx;
    margin-top: 28rpx;
    display: flex;
    align-items: center;
    justify-content: flex-start;
}

.detail_info .detail_time .del{
    margin-left: 30rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: #252525;
}

.answerList{
    /*padding: 28rpx 32rpx 36rpx 32rpx;*/
    background: #FFF;
}

.answerList .answer_header{
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    height: 90rpx;
    border-bottom: 2rpx solid rgba(0, 0, 0, 0.1);
    padding: 0 18rpx 32rpx;
}

.answerList .answer_header .answer_title{
    font-size: 44rpx;
    font-weight: 500;
    color: rgba(0, 0, 0, 0.85);
}

.answerList .answer_header .answer_desc{
    font-size: 24rpx;
    font-weight: 300;
    color: #888888;
}

.answerList .answer_item{
    margin-bottom: 18rpx;
    border-bottom: 18rpx solid rgba(0, 0, 0, 0.1);
    padding: 40rpx 32rpx 26rpx 32rpx;
}

.answerList .answer_item .answer_text{
    margin-top: 28rpx;
    font-size: 32rpx;
    font-weight: 400;
    color: rgba(0, 0, 0, 0.95);
}

.answerList .answer_item .answer_effect{
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 24rpx;
    font-weight: 300;
    color: rgba(0, 0, 0, 0.45);
    margin-top: 20rpx;
    line-height: 1;
}

.answer_effect .answer_time{

}

.answer_effect .answer_like{
    display: flex;
    align-items: center;
    justify-content: center;
}
.answer_effect .answer_like image{
    width: 22rpx;
    height: 22rpx;
    margin-left: 10rpx;
}

.custom-class{
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
}






















