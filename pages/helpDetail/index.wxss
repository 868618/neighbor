}

.yiyingzhu, .daiyingzhu, .yibangzhu, .yingzhuzhong {
    position: relative;
}

.yiyingzhu::after, .daiyingzhu::after, .yibangzhu::after, .yingzhuzhong::after{
    content: '';
    width: 126rpx;
    height: 100rpx;
    position: absolute;
    right: 38rpx;
    top: 28rpx;
    z-index: 9;
}
.yiyingzhu::after{
    background: url("http://oss.cogo.club/a10cc81a-0dc5-44bc-9b66-eae7e5fa7785.png") no-repeat center;
    background-size: 100%;
}

.daiyingzhu::after{
    background: url("http://oss.cogo.club/c09d752e-24a8-4c22-85a6-f9403bd75b38.png") no-repeat center;
    background-size: 100%;
}
.yibangzhu::after{
    background: url("http://oss.cogo.club/0c6f1a1f-92cb-49ed-b95b-0e23687b148c.png") no-repeat center;
    background-size: 100%;
}
.yingzhuzhong::after {
    background: url("https://linjubang.imrookie.cn/nb/image/2020/12/2/ff08810687a04a629c7d587b67833609.png") no-repeat center;
    background-size: 100%;
}

.detail_info .detail_title{
    font-size: 36rpx;
    font-weight: 500;
    color: rgba(0, 0, 0, 0.95);
    line-height: 50rpx;
    margin-top: 38rpx;
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
}

.detail_info .detail_title .detail_title_tag{
    font-size: 28rpx;
    font-weight: 400;
    color: #FF9D12;
}

.urgent{
    position: relative;
}
.urgent::after{
    content: '加急';
    width: 58rpx;
    height: 32rpx;
    border-radius: 16rpx 0px;
    line-height: 32rpx;
    background: #F77051;
    position: absolute;
    right: -72rpx;
    top: 50%;
    transform: translateY(-50%);
    font-size: 20rpx;
    text-align: center;
    font-weight: bold;
    color: #FFF;
    z-index: 1;
}

.detail_info .detail_price{
    font-size: 30rpx;
    font-weight: 500;
    color: #FF5500;
    margin-top: 22rpx;
    line-height: 1;
}

.detail_info .detail_price text{
    margin-left: 12rpx;
}

.detail_info .detail_tag{
    display: flex;
    align-items: center;
    justify-content: flex-start;
    margin-top: 20rpx;
}
.detail_info .detail_tag text {
    padding: 1rpx 7rpx;
    background: #FFF6ED;
    font-size: 24rpx;
    font-weight: 400;
    color: #FE9500;
    border-radius: 16rpx;
    margin-right: 20rpx;
}

.detail_info .detail_text{
    margin-top: 28rpx;
    font-size: 32rpx;
    font-weight: 300;
    color: rgba(0, 0, 0, 0.75);
    line-height: 44rpx;
}

.detail_info .detail_images{
    display: flex;
    align-items: center;
    justify-content: flex-start;
    padding-top: 20rpx;
}
.detail_info .detail_images .detail_images_item{
    width: 219rpx;
    height: 219rpx;
    overflow: hidden;
}

.detail_info .detail_images .detail_images_item image{
    width: 100%;
}


.detail_info .detail_time{
    font-size: 24rpx;
    font-weight: 400;
    color: #888888;
    line-height: 34rpx;
    margin-top: 28rpx;
    display: flex;
    align-items: center;
    justify-content: flex-start;
}

.detail_info .detail_time .del{
    margin-left: 30rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: #252525;
}

