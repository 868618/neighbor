/* pages/location/index.wxss */
page{
    /*background: aqua;*/
}

.location{
    padding-top: 150rpx;
}
.location .location_header {
    padding: 0 32rpx;
}

.desc{
    font-size: 28rpx;
    font-weight: 400;
    color: #BBBBBB;
    line-height: 1;
}

.location_header .title{
    font-size: 32rpx;
    font-weight: 500;
    color: #252525;
    margin-top: 32rpx;
    line-height: 1;
}
.location_header .title text{
    position: relative;
    margin-left: 32rpx;
}

.location_header .title text:after{
    content: '';
    position: absolute;
    left: -18rpx;
    top: 50%;
    transform: translate(-100%, -50%);
    width: 19rpx;
    height: 19rpx;
    background: #FE990C;
}

.locationNear{
    /*padding: 0 32rpx;*/
    padding-top: 28rpx;
    padding-left: 32rpx;
}

.locationNear .tags{
    margin-top: 22rpx;
    display: flex;
    flex-wrap: wrap;
}

.locationNear .tags .tag {
    /*width: 164px;*/
    height: 68rpx;
    background: #F5F5F5;
    border-radius: 8rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    font-weight: 400;
    color: #252525;
    padding: 0 26rpx;
    margin-right: 20rpx;
    margin-top: 20rpx;
}
.custom-class{
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
}

.custom-class1{
    /*margin-top: 232rpx;*/
    padding-top: 232rpx;
    background: red;
}
.location_fullname{
    margin-top: 30rpx;
    font-size: 44rpx;
    font-weight: 500;
    color: rgba(0, 0, 0, 0.85);
}

.location_name{
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(0, 0, 0, 0.65);
    margin-top: 78rpx;
}

.location_input{
    padding: 30rpx 0;
    border-bottom: 2rpx solid rgba(0, 0, 0, 0.25);
}
.input_placeholder{
    font-size: 32rpx;
    font-weight: 400;
    color: rgba(0, 0, 0, 0.25);
}