
.task_item {
    box-sizing: border-box;
    padding: 22rpx 30rpx;
    background: #fff;
    margin-bottom: 20rpx;
    position: relative;
}

/*.task_item:last-of-type {*/
/*    margin-bottom: 0;*/
/*}*/

.task_item .task_header {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.task_item .task_header .task_title {
    color: #000;
    font-size: 36rpx;
    line-height: 50rpx;
    max-width:396rpx;
}
.jiaji {
    position: relative;
}

.task_item .task_header .jiaji::after {
    content: '加急';
    width: 58rpx;
    height: 32rpx;
    border-radius: 16rpx 0px;
    line-height: 32rpx;
    background: #F77051;
    position: absolute;
    right: -72rpx;
    top: 50%;
    transform: translateY(-50%);
    font-size: 20rpx;
    text-align: center;
    font-weight: bold;
    color: #FFF;
    z-index: 1;
}

.task_item .task_header .task_price {
    color: #f50;
    font-size: 30rpx;
    line-height: 50rpx;
    font-weight: bold;
    position: relative;
}

