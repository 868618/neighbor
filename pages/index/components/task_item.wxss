.task_item .task_body{
    margin-top: 8rpx;
    font-size:28rpx;
    font-weight:300;
    color: #575757;
    line-height:44rpx;
    max-width: 468rpx;

    overflow:hidden;
    text-overflow:ellipsis;
    display:-webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2;
}

.task_item .task_image{
    position: absolute;
    right: 32rpx;
    bottom: 42rpx;
    max-width: 189rpx;
    max-height: 132rpx;
    border-radius: 12rpx;
    overflow: hidden;
}

.task_item .task_image image{
    width: 189rpx;
}


.task_item .task_tag{
    margin-top: 12rpx;
}


.task_item .task_tag .tag{
    height:34rpx;
    font-size:24rpx;
    font-weight:400;
    color:rgba(254,149,0,1);
    line-height:34rpx;
    background:#FFF6ED;
    border-radius:16rpx;
    display: inline-block;
    padding: 4rpx 10rpx;
    margin-right: 20rpx;
}
.task_item .task_tag .tag:last-of-type {
    margin-right: 0
}

.task_item .task_footer {
    margin-top: 30rpx;
}

.task_item .task_footer .task_footer_box {
    /* background: red; */
    display: flex;
    align-items: flex-end;
}

.task_item .task_footer .task_footer_box .task_avator{
    width: 41rpx;
    height: 41rpx;
    display: inline-block;
}

.task_item .task_footer .task_footer_box .task_avator image {
    width: 100%;
    border-radius: 50%;
}

.task_item .task_footer .task_footer_box .name {
    color: #000;
    margin-left: 12rpx;
    font-size: 28rpx;
}

.task_item .task_footer .task_footer_box .line {
    width: 2rpx;
    height: 22rpx;
    background: rgba(0,0,0,0.45);
    display: inline-block;
    margin: 0 20rpx;
    margin-bottom: 8rpx;
}

.task_item .task_footer .task_footer_box .time {
    color: rgba(0,0,0,0.45);
    font-size:24rpx;
}